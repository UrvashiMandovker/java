package javaapplication3;

import java.sql.*;
import java.sql.DriverManager;

/**
 *
 * @author Urvashi Mandovker
 */
public class onclick {
        String url = "jdbc:mysql://localhost:3306/company";
        String user = "root";
        String pass = "soodraghav10";
        
        int arrage[] = new int[40];
        Object name[] = new Object[40];
    int loginu(String name,int age)
    {
         int age1 = age;
         String name2 = name;
        try{
            Class.forName("com.mysql.cj.jdbc.Driver").newInstance();
         
          Connection conn = DriverManager.getConnection(url,user,pass);
          
        //  Statement ps = conn.createStatement();
          
        //  ps.executeUpdate("insert into data(id,name,age) values("+106+",'"+ name +"',"+age+")" );
          
          Statement st = conn.createStatement();
          ResultSet rs = st.executeQuery("select name, age from data where name='"+ name +"' and age ="+age+"");
        
              if(rs.next())
              {
                  //conn.close();
                  return 1;
                   
              }else
              {
                  conn.close();
                 return 0;
                 
              }
             
           
       //   System.out.println("Done insert");
        }catch(Exception e)
        {
            System.out.println(e);
        }
       return 0;
    }
    
    int details(String name, int age)
    {
        try{
        String names = name;
        int age3 = age;
        
         
            Class.forName("com.mysql.cj.jdbc.Driver").newInstance();
         
          Connection conn = DriverManager.getConnection(url,user,pass);
          
        Statement ps = conn.createStatement();
          
          ps.executeUpdate("insert into data(id,name,age) values("+107+",'"+ names +"',"+age3+")" );
          
         conn.close();
         
         System.out.println("Done insert");
        }catch(ClassNotFoundException | IllegalAccessException | InstantiationException | SQLException e)
        {
            System.out.println(e);
        }
         
         return 1;
    }
    
    
}                                                                                           Main Working Page
